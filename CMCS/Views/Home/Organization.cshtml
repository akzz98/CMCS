@{
    ViewBag.Title = "Organization Dashboard";
}

<div class="container text-center">
    <h1>Welcome Organisation,</h1>
    <p>What would you like to do?</p>

    <div class="btn-group" role="group" aria-label="Organisation actions">
        <a href="@Url.Action("ViewUnapprovedClaims", "Organization")" class="btn btn-danger">View Unapproved Claims</a>
        <a href="@Url.Action("ViewVerifiedClaims", "Organization")" class="btn btn-warning">View Verified Claims</a>
        <a href="@Url.Action("ViewApprovedClaims", "Organization")" class="btn btn-success">View Approved Claims</a>
    </div>
</div>

<style>
    .container {
        margin-top: 50px;
    }
    .btn-group {
        margin-top: 20px;
    }
    .btn {
        margin: 10px;
        width: 250px;
    }
</style>
